<h1>Happy baking!</h1>
<% @recipies.each do |recipie| %>
<div>
  <h3>
    <a href="/<%= recipie[:id] %>"><%= recipie[:title] %></a>
    <div><img src=<%= recipie[:image] %>></div>
    <h3>Ingredients:</h3>
    <p><%= recipie[:ingredients] %></p>
    <h3>Method:</h3>
    <p><%= recipie[:method] %></p>
  </h3>
</div>
<% end %>
